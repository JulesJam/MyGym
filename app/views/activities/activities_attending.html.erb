<p id="notice"><%= notice %></p>

<h1 class="title">Your Activities</h1>


<div class="centered_back_link">
  <%= link_to 'Back', menu_path %>&nbsp|&nbsp
  <%= link_to 'Choose a new activity', activities_path %>
</div>
<% @activities_attending.each do |activity| %>
  <div class="card card-outline-primary text-xs-center">
    <div class="card-block">
      <div class="card-user-thumb">
        <%= image_tag activity.image %> 
      </div>
       <h4> <%= activity.activity_name %></h4>
       <h5><%= activity.location %></h5>
       <p> <%= activity.description %></p>
          <blockquote class="card-blockquote">
            Date: <%= activity.date %> &nbspStart Time: <%activity.start_time.strftime("%H:%M:%S") %>&nbspDuration:<%= activity.duration.strftime("%H:%M:%S") %>&nbspAvailable Places: <% places_available = activity.number_of_places.to_i - activity.places_taken.to_i%><%= places_available%> This activity is being run by <%=activity.creator.first_name%>
          </blockquote>
          <div class="card_bottom_nav">
          
          <%= link_to 'View / Cancel this activity', activity %><br>
          
          </div>
        </div>
      </div>
<% end %>

