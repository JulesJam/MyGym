<%= form_for(activity) do |f| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :activity_name %><br>
    <%= f.text_field :activity_name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%=  f.select :location, [["Gym Floor","Gym Floor"], ["Studio 1","Studio 1"], ["Yoga Studio","Yoga Studio"],["Spin Room","Spin Room"],["Pool","Pool"]] %>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time%>
  </div>

  <div class="field">
    <%= f.label :duration %><br>
    <%= f.time_select :duration, :default => {:hour => '00', :minute => '50'}%>
  </div>

  <div class="field">
    <%= f.label :number_of_places %><br>
    <%= f.number_field :number_of_places %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, [["Open For Booking","Open For Booking"], ["Full","Full"], ["Cancelled","Cancelled"],["Attended","Attended"]] %>
    
  </div>

  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active, :checked => true %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
