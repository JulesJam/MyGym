<p id="notice"><%= notice %></p>
<div class="show_card">
  <p>
    <strong>Activity name:</strong>
    <%= @activity.activity_name %>
  </p>
  
  <p>
    <strong>Image:</strong>
    <%= @activity.image %>
  </p>
  
  
  <p>
    <strong>Description:</strong>
    <%= @activity.description %>
  </p>
  
  <p>
    <strong>Location:</strong>
    <%= @activity.location %>
  </p>
  
  <p>
    <strong>Date:</strong>
    <%= @activity.date %>
  </p>
  
  <p>
    <strong>Start time:</strong>
    <%= @activity.start_time %>
  </p>
  
  <p>
    <strong>Duration:</strong>
    <%= @activity.duration %>
  </p>
  
  <p>
    <strong>Number of places:</strong>
    <%= @activity.number_of_places %>
  </p>
  
  <p>
    <strong>Status:</strong>
    <%= @activity.status %>
  </p>
  
  <p>
    <strong>Active:</strong>
    <%= @activity.active %>
  </p>
  
  
  <p>
    <strong>Places taken:</strong>
    <%= @activity.places_taken %>
  </p>
  
  <p>
    <strong>Created By</strong>
    <%= @activity.user_id %>
  </p>
</div>
  

<div class="centered_back_link">
  <div class="button_show">
    <%= link_to activity_book_path, method: :post do %>
    Book <%= @activity.activity_name %>&nbsp<%= @activity.date %>&nbsp<%= @activity.start_time %><br>
    <% end%>
  </div>
  <% if current_user.admin_level >1 %>
    <%= link_to 'Cancel This Activity', activity_cancel_path, method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp | &nbsp
    <%= link_to 'Edit', edit_activity_path(@activity) %> 
  <% end %>|
  <%= link_to 'Back', activities_path %>
</div>


