<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Duration</th>
      <th>Number of places</th>
      <th>Status</th>
      <th>Active</th>
      <th>Image</th>
      <th>Places taken</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.location %></td>
        <td><%= activity.date %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.duration %></td>
        <td><%= activity.number_of_places %></td>
        <td><%= activity.status %></td>
        <td><%= activity.active %></td>
        <td><%= activity.image %></td>
        <td><%= activity.places_taken %></td>
        <td><%= activity.user_id %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

