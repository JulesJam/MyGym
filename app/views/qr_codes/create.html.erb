<div class="membership_card">
  <h1 class="membership_card"><%=@user.first_name%>&nbsp<%=@user.last_name%></h1>
    <div ><%= image_tag @user.image, width:100 %></div>
      <%=link_to "MENU", menu_path, class: "membership_link_to_menu"%>
      <%if  @expiry =="Expired"%>
      <br>
      <img class="membership_expired" src="../images/no_entry.png" alt="Card image cap">
      <%else%>
        <div id="qrcontainer">
        <table class="qr-code">
         <% @qr.modules.each_index do |x| %>
         <tr>
          <% @qr.modules.each_index do |y| %>
          <% if @qr.dark?(x,y) %>
          <td class="black"/>
          <% else %>
          <td class="white"/>
          <% end %>
          <% end %>
          </tr>
          <% end %>
          </table>
        </div>
      <%end%>
    <br />
  <%= @expiry %>
</div>


