<!DOCTYPE html>
<html>
  <head>
    <title>MyGym</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
         <% if current_user %>
          <li class="nav-item">Current User...<%= current_user.email %>&nbspUser Id...<%=current_user.id%></li>
          <li class="nav-item"><%= link_to"Classes", activities_path %></li>
          <li class="nav-item"><%= link_to"Membership Card", qr_codes_create_path %></li>
          <li class="nav-item"><%= link_to"Message", conversations_path %></li>
         <li class="nav-item"><%= link_to"User List",users_path%></li>
         <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li class="nav-item"><%= link_to "Sign In", new_user_session_path %></li>
          <li class="nav-item"><%= link_to "Register", new_user_registration_path %></li>
          <% end %>

        </ul>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
       <%= yield %>
    </main>
  </body>
</html>
